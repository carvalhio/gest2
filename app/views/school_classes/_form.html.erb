<%= form_with(model: school_class, class: "needs-validation", local: true) do |form| %>
  <% if school_class.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(school_class.errors.count, "error") %> prohibited this School Class from being saved:</h4>
      <ul>
        <% school_class.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3 col-md-4">
    <%= form.label :Ano, class: "form-label" %>
    <%= form.text_field :grade, class: "form-control form-control-sm", placeholder: "Ex: 1º ano" %>
  </div>

<div class="mb-3 col-md-4">
  <%= form.label :level, "Nível", class: "form-label" %>
  <%= form.collection_select :level, Level.all, :name, :name, { prompt: "Selecione o nível" }, class: "form-select form-select-sm" %>
</div>

  <div class="mb-3 col-md-4">
    <%= form.label :Quantidade, class: "form-label" %>
    <%= form.number_field :quantity, class: "form-control form-control-sm", placeholder: "Ex: 70" %>
  </div>

  <div class="d-flex justify-content-end">
    <%= form.submit "Salvar", class: "btn btn-primary btn-sm" %>
  </div>
<% end %>
