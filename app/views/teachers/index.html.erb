<h1>Professores</h1>

<div class="d-flex justify-content-between align-items-center mb-3">
  <%= link_to 'Novo Professor', new_teacher_path, class: 'btn btn-primary' %>
</div>

<table class="table table-striped table-bordered align-middle text-center">
  <thead class="table-light">
    <tr>
      <th>#</th>
      <th>Nome do Professor</th>
      <th>Disciplinas</th>
      <th>Email</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @teachers.each_with_index do |teacher, index| %>
      <tr>
        <td><%= index + 1 %></td> <!-- Numbering -->
        <td><%= teacher.name %></td>
        <td>
          <% teacher.subjects.each do |subject| %>
            <%= subject.subject_name %><br>
          <% end %>
        </td>
        <td><%= teacher.email %></td>
        <td>
          <%= link_to 'Editar', edit_teacher_path(teacher), class: 'btn btn-sm btn-outline-primary' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
